@model PRAgencySite.Models.CampaignViewModel

@{
    ViewData["Title"] = "Edit Campaign";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <label asp-for="BrandId" class="control-label">Brand</label>
        <select asp-for="BrandId" class="form-control" asp-items="Model.Brands" disabled></select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InfluencerId" class="control-label">Influencer</label>
        <select asp-for="InfluencerId" class="form-control" asp-items="Model.Influencers"></select>
        <span asp-validation-for="InfluencerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfReels" class="control-label"></label>
        <input asp-for="NumberOfReels" class="form-control" />
        <span asp-validation-for="NumberOfReels" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPosts" class="control-label"></label>
        <input asp-for="NumberOfPosts" class="form-control" />
        <span asp-validation-for="NumberOfPosts" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfStories" class="control-label"></label>
        <input asp-for="NumberOfStories" class="form-control" />
        <span asp-validation-for="NumberOfStories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Budget" class="control-label"></label>
        <input asp-for="Budget" class="form-control" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Submitted to Admin">Submitted to Admin</option>
            <option value="Assigned">Assigned</option>
            <option value="Rejected by Admin">Rejected by Admin</option>
            <option value="Rejected by Influencer">Rejected by Influencer</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Remarks" class="control-label"></label>
        <input asp-for="Remarks" class="form-control" />
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
