@model IEnumerable<PRAgencySite.Models.Campaign>

@{
    ViewData["Title"] = "Campaigns";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Influencer</th>
            <th>Reels</th>
            <th>Posts</th>
            <th>Stories</th>
            <th>Budget</th>
            <th>Status</th>
            <th>Remarks</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var campaign in Model)
        {
            <tr>
                <td>@campaign.Brand?.Name</td>
                <td>@campaign.Influencer?.InstagramHandle</td>
                <td>@campaign.ReelsCount</td>
                <td>@campaign.PostsCount</td>
                <td>@campaign.StoriesCount</td>
                <td>@campaign.Budget</td>
                <td>@campaign.Status</td>
                <td>@campaign.Remarks</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@campaign.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
