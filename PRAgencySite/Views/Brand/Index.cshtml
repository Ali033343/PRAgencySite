@model PRAgencySite.Models.Brand

@{
    ViewData["Title"] = "Brand Dashboard";
}

<h1>@ViewData["Title"]</h1>

<p>Name: @Model.Name</p>
<p>Description: @Model.Description</p>

<a asp-action="StartCampaign" class="btn btn-primary">Start a Campaign</a>

<h2>Your Campaigns</h2>
<table class="table">
    <thead>
        <tr>
            <th>Campaign ID</th>
            <th>Reels</th>
            <th>Posts</th>
            <th>Stories</th>
            <th>Budget</th>
            <th>Status</th>
            <th>Assigned Influencer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var campaign in Model.Campaigns)
        {
            <tr>
                <td>@campaign.Id</td>
                <td>@campaign.ReelsCount</td>
                <td>@campaign.PostsCount</td>
                <td>@campaign.StoriesCount</td>
                <td>@campaign.Budget</td>
                <td>@campaign.Status</td>
                <td>
                    @if (campaign.Status == "Accepted by Influencer")
                    {
                        @campaign.Influencer.Name
                    }
                    else
                    {
                        <em>Pending</em>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
